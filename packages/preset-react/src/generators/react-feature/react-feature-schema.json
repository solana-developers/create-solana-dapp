{
  "$schema": "http://json-schema.org/schema",
  "$id": "ReactFeatureSchema",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the feature?"
    },
    "anchorName": {
      "type": "string",
      "description": "Anchor project name",
      "default": "anchor"
    },
    "webName": {
      "type": "string",
      "description": "Name of the web application (overrides name)",
      "default": "web"
    },
    "preset": {
      "type": "string",
      "description": "The preset to use",
      "enum": ["next", "react"]
    },
    "feature": {
      "type": "string",
      "enum": ["anchor-counter"],
      "description": "The feature to generate",
      "x-prompt": "Which feature would you like to generate?"
    },
    "ui": {
      "description": "The UI library to use",
      "type": "string",
      "enum": ["none", "tailwind"],
      "default": "tailwind",
      "x-prompt": "Which UI library would you like to use?"
    },
    "npmScope": {
      "type": "string",
      "description": "The npm scope to use"
    },
    "skipFormat": {
      "description": "Skip formatting files",
      "type": "boolean",
      "default": false,
      "x-priority": "internal"
    }
  },
  "required": ["name"]
}
